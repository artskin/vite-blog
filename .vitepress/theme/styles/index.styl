select{
//   appearance:none;
//   -moz-appearance:none;
//   -webkit-appearance: none;
  height: 26px;
  line-height: 26px;
  border: 1px solid #929e9e;
  
  padding: 2px;
  display: inline-block;
  box-sizing: content-box;
  position: relative;
  padding-right: 20px;
}
select::after{
  content: '';
  position: absolute;
  width: 10px;
  height: 10px;
  right: 0;
  top: 0;
  border: 10px solid;
  background: #0b6182;
  border-color: transparent transparent #42b983 ;
  z-index: 999;
}
select option{
  padding: 2px;
  -webkit-appearance: none;
}
