.vuepress-plugin-demo-block__app{
	position: relative;
	&::after{
		content: 'vue-demo'
		position: absolute;
		font-size: 1.2em;
		color: #eee;
		right :0;
		transform: rotate(40deg)
		top: 30px;
		opacity :0.5
	}
}

.page{
	.vuepress-plugin-demo-block__wrapper{
		div{
			box-sizing: inherit;
		}
		margin-bottom: 10px;
		.vuepress-plugin-demo-block__code{
			background-color:transparent
		}
		.vuepress-plugin-demo-block__display{
			padding: 0.5rem;
		}
		.vuepress-plugin-demo-block__footer{
			&:hover{
				background-color: #f4f6f8
			}
			.vuepress-plugin-demo-block__jsfiddle,
			.vuepress-plugin-demo-block__codepen{
				top: 6px;
			}
			.vuepress-plugin-demo-block__expand{
				width: 100%;
				&::before,
				&::after{
					transition: all 0.5s;
				}
				&::after{
					content: "view-source";
					width: 100px;
					position: absolute;
					top :11px;
					color: #ccc;
					opacity :0
				}
			}
		}
		.vuepress-plugin-demo-block__show-link{
			.vuepress-plugin-demo-block__expand{
				&::after{
					content: "hide-source";
				}
			}
		}
		&:hover{
			.vuepress-plugin-demo-block__footer{
				width: 100%;
				.vuepress-plugin-demo-block__expand{
					&::before,
					&::after{
						margin-left: -42px;
					}
					&::after{
						opacity :1
					}
				}
				&:hover{
					.vuepress-plugin-demo-block__expand::after{
						color: #3eaf7c;
					}
				}
			}
			
		}
	}
}


@media (max-width: 719px) {
	.theme-container{
		.navbar{
			height:2.8rem;
			line-height: 1.4rem;
			background:#fff;
			padding:.5em 1em .5em 2.5em;
			box-shadow: 0 0 5px rgba(0,0,0,0.2);
			width: 100%;
			box-sizing: border-box;
			.sidebar-button {
				display: block;
				width: 1rem;
				height: 1rem;
				top: .3rem;
				left: .5rem;
				.icon{
					width: 1rem;
					height: 1rem;
				}
			}
			.logo{
				height 1.8em
			}
			.links{
				background-color: transparent;
				position: absolute;
				top: .3rem;
				font-size: .92rem;
				right :0.7rem;
				padding-left: 0;
			}
			.site-name{
				font-size:.9rem;
			}
			.search-box{
				input{
					left: 0;
					&:focus{
						left: 0;
					}
				}
			}
		}
	}
	
	.sidebar {
		top: 2.8rem;
		padding-top: 0;
		box-shadow: 0 10px 10px rgba(0,0,0,.2);
		z-index 20;
		transform: translateX(-115%);
		border: none;
	}
	.sidebar-mask{
		background: rgba(0,0,0,.24)
	}
	
}

@media (max-width: 419px) {
	.theme-default-content {
		&:not(.custom){
			padding: .8rem;
		}
		div[class*="language-"]{
			margin: 0 -.4rem;
			border-radius: 3px;
		}
	}

}

